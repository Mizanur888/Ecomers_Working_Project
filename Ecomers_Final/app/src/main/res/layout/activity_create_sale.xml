<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".App_Firebase.createSaleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:id="@+id/TakePicID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_a_photo_black_24dp"/>

        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose File" />

        <EditText
            android:id="@+id/file_nameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter File Name"
            android:textSize="15sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/upload_ImageViedID"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_above="@id/progress_barID"
        android:layout_marginTop="10dp" />

    <ProgressBar
        android:id="@+id/progress_barID"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <Button
        android:id="@+id/btnImageUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Upload"/>

    <TextView
        android:id="@+id/TextViewShowUploadID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnImageUpload"
        android:layout_alignBottom="@id/btnImageUpload"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@id/btnImageUpload"
        android:gravity="center"
        android:text="show Upload"
        android:textSize="18sp" />
</RelativeLayout>